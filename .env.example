# Server Configuration
NODE_ENV=development
PORT=3000

# Database Configuration (ElephantSQL - PostgreSQL)
DATABASE_URL=postgresql://username:password@host:port/database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=worldesta_automation
DB_USER=postgres
DB_PASSWORD=your_db_password

# YouTube API
YOUTUBE_API_KEY=your_youtube_api_key
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret
YOUTUBE_REDIRECT_URI=http://localhost:3000/auth/youtube/callback

# TikTok Business API
TIKTOK_CLIENT_ID=your_tiktok_client_id
TIKTOK_CLIENT_SECRET=your_tiktok_client_secret
TIKTOK_ACCESS_TOKEN=your_tiktok_access_token
TIKTOK_BUSINESS_ACCOUNT_ID=your_tiktok_business_account_id

# Cloudinary (Media Storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Flowise Integration
FLOWISE_API_URL=http://localhost:3001/api
FLOWISE_API_KEY=your_flowise_api_key
FLOWISE_CHATFLOW_ID=your_chatflow_id

# Scheduling Configuration
TIMEZONE=GMT
SCHEDULE_CHECK_INTERVAL=300000

# Logging
LOG_LEVEL=info

# CORS Settings
CORS_ORIGIN=http://localhost:3000

# Misc
JWT_SECRET=your_jwt_secret_key
